{
  "name": "@themeparks/parksapi",
  "type": "module",
  "version": "2.0.0",
  "description": "",
  "engines": {
    "npm": ">=11",
    "node": ">=24"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "npm run ts-dev -- src/test.ts",
    "ts-dev": "tsx --env-file=.env",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cache": "jest cache",
    "web": "npm run build && NODE_ENV=production npm run ts-dev -- src/webServer.ts",
    "web:dev": "concurrently -n \"API,UI\" -c \"blue,magenta\" \"npm run ts-dev -- src/webServer.ts\" \"cd web-ui && npm run dev\"",
    "web:build": "cd web-ui && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThemeParks/parksapi.git"
  },
  "author": "@cube",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ThemeParks/parksapi/issues"
  },
  "homepage": "https://github.com/ThemeParks/parksapi#readme",
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vite": "^7.1.8"
  },
  "dependencies": {
    "@themeparks/typelib": "^1.0.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "ajv": "^8.17.1",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sift": "^17.1.3"
  }
}
